<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings"
    android:orientation="vertical"
    android:background="@drawable/black_background"
    android:id="@+id/settingsLayout">

    <LinearLayout
        android:layout_width="675dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/playMenuBack"
            android:layout_width="80sp"
            android:layout_height="35sp"
            android:layout_margin="5sp"
            android:background="@drawable/button_background"
            android:onClick="toMenu"
            android:text="BACK"
            android:textStyle="bold" />

        <TextView
            android:layout_width="564dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5sp"
            android:gravity="center"
            android:text="SETTING"
            android:textSize="34sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="633dp"
        android:layout_height="238dp"
        android:layout_gravity="center"
        android:layout_marginStart="80sp"
        android:layout_marginEnd="80sp"
        android:layout_marginBottom="40sp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10sp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/third"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:text="BACKGROUND"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="NestedWeights" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2sp"
                android:layout_weight="2"
                android:background="@drawable/blue_background"
                android:onClick="changeToBackground1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2sp"
                android:layout_weight="2"
                android:background="@drawable/black_background"
                android:onClick="changeToBackground2" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2sp"
                android:layout_weight="2"
                android:background="@drawable/yellow_background"
                android:onClick="changeToBackground3" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2sp"
                android:layout_weight="2"
                android:background="@drawable/orange_background"
                android:onClick="changeToBackground4" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2sp"
                android:layout_weight="2"
                android:background="@drawable/red_background"
                android:onClick="changeToBackground5" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2sp"
                android:layout_weight="2"
                android:background="@drawable/pink_background"
                android:onClick="changeToBackground6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:text="BUBBLE"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="NestedWeights" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2sp"
                android:layout_weight="2"
                android:background="@drawable/soapbubble_blue"
                android:onClick="changeToBubble1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2sp"
                android:layout_weight="2"
                android:background="@drawable/soapbubble_green"
                android:onClick="changeToBubble2" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2sp"
                android:layout_weight="2"
                android:background="@drawable/soapbubble_purple"
                android:onClick="changeToBubble3" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2sp"
                android:layout_weight="2"
                android:background="@drawable/soapbubble_red"
                android:onClick="changeToBubble4" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2sp"
                android:layout_weight="2"
                android:background="@drawable/soapbubble_yellow"
                android:onClick="changeToBubble5" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:text="No. of lives"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="NestedWeights" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2sp"
                android:layout_weight="2"
                android:background="@drawable/button_background"
                android:onClick="changeLivesTo3"
                android:text="3"
                android:textStyle="bold" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2sp"
                android:layout_weight="2"
                android:background="@drawable/button_background"
                android:onClick="changeLivesTo5"
                android:text="5"
                android:textStyle="bold" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2sp"
                android:layout_weight="2"
                android:background="@drawable/button_background"
                android:onClick="changeLivesTo10"
                android:text="10"
                android:textStyle="bold" />
        </LinearLayout>


        <Button
            android:layout_width="250sp"
            android:layout_height="0dp"
            android:layout_gravity="end"
            android:layout_marginTop="15sp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:onClick="resetHighScores"
            android:text="Reset Scores"
            android:textStyle="bold" />


    </LinearLayout>



</LinearLayout>